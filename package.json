{
  "private": true,
  "name": "sanabutton.github.io",
  "scripts": {
    "test": "run-p lint test:*",
    "test:small": "jest --forceExit --detectOpenHandles",
    "build": "run-s build:frontend build:backend",
    "build:frontend": "parcel build _frontend/main.ts _frontend/main-async.ts",
    "build:backend": "bundle exec jekyll build",
    "watch": "run-p watch:*",
    "watch:frontend": "parcel watch _frontend/main.ts _frontend/main-async.ts",
    "watch:backend": "bundle exec jekyll build --watch",
    "serve": "run-p watch:frontend serve:backend",
    "serve:backend": "bundle exec jekyll serve --watch",
    "lint": "run-p lint:** ",
    "lint:tslint": "tslint -p tsconfig.json",
    "lint:tsc": "tsc -p tsconfig.json",
    "lint:style:typescript": "prettier -l \"**/*.ts\"",
    "lint:style:markdown": "prettier -l \"**/*.md\"",
    "fmt": "run-s format",
    "format": "run-p format:*",
    "format:typescript": "prettier --write \"**/*.ts\"",
    "format:markdown": "prettier --write \"**/*.md\""
  },
  "devDependencies": {
    "@ndxbn/preset-jest": "latest",
    "@ndxbn/preset-tslint": "latest",
    "@ndxbn/preset-typescript": "latest",
    "@types/jest": "23.3.10",
    "@types/node": "10.12.17",
    "jest": "^23.6.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.10.3",
    "prettier": "^1.15.3",
    "ts-jest": "~23.10.5",
    "tslint": "~5.11.0",
    "tslint-config-prettier": "~1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.1"
  },
  "jest": {
    "preset": "@ndxbn/preset-jest",
    "roots": [
      "<rootDir>/_frontend/"
    ]
  }
}
